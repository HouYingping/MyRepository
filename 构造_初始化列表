#include<iostream>
#include<string>
using namespace std;
class Person {
public:
	Person(int a, int b, int c) :m_a(a),m_b(b),m_c(c)
	{
		/*m_a = a;
		m_b = b;
		m_c = c;*/
	}

	void printPerson() {
		cout << "m_a:" << m_a << endl;
		cout << "m_b:" << m_b << endl;
		cout << "m_c:" << m_c << endl;
	}
private:
	int m_a;
	int m_b;
	int m_c;
};
int main() {
	Person p(10,20, 30);
	p.printPerson();
	system("pause");
	return 0;
}
