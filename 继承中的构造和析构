#include<iostream>
#include<string>
using namespace std;
//先创建父类对象然后才创建子类对象
//如果想要通过子类对象访问到父类中的同名成员，需要加作用（父类名：：）
//否则 直接 调用的是自己的（“就近原则”）
class Base {
public:
	int m_A;
	Base() {
		m_A = 100;
		cout << "这是父类的构造函数" << endl;
	}
	~Base() {
		cout << "这是父类的析构函数" << endl;
	}
};
class Son : public Base
{
public:
	Son() {
		m_A = 200;
		cout << "这是子类的构造函数" << endl;
	}
	~Son() {
		cout << "这是子类的析构函数" << endl;
	}
	int m_A;
};
void test() {
	//Base base;
	Son son;
	cout << "Son 的 m_A = " << son.m_A << endl;
	cout << "Base的m_A = " << son.Base::m_A << endl;
}
int main() {
	test();
	system("pause");
	return 0;
}
